    <h3>Book details</h3>
    <ul>
      <li>Genres: {{ bookGenres }}</li>
      <li>{{ bookPages }} pages</li>
      <li>
        <a href="{{ bookLink }}">View description on Bookshop</a>
      </li>
    </ul>
    <h3>Playlist details</h3>
    <ul>
      <li>{{ playlistTracks }} tracks</li>
      <li>Runtime: {{ playlistRuntime }}</li>
      <li>
        <a href="{{ playlistLink }}">Listen to playlist on Tidal</a>
      </li>
    </ul>
